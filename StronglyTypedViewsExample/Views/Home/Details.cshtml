@using StronglyTypedViewsExample.Models

@*making strongly typed view for single object details*@
@model Person

<!DOCTYPE html>
<html>
<head>
    
    <title>Person Details</title>
    <meta charset="utf-8" />
    <link href="~/StyleSheet.css" rel="stylesheet" />
</head>
<body>
    <div class="page-content">
        <h1>Person Details</h1>
        <div class="box">
            <h3>@Model.Name</h3>
            <table class="table">
                <tbody>
                    <tr>
                        <td>Gender</td>
                        <td>@Model.PersonGender</td>
                    </tr>
                    <tr>
                        <td>Date Of Birth</td>
                        <td>@Model.DateOfBirth?.ToString("MM/dd/yyyy")</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <a href="/home">Back to persons</a>
    </div>
</body>
</html>