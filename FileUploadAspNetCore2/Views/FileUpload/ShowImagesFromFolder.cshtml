@model IEnumerable<string>

@{
    ViewData["Title"] = "Show Images from Folder";
}

<h1>Show Images from Folder</h1>

<div class="row">
    <div class="col-md-4">
        @foreach (var fileName in Model)
        {
            <img src="@Url.Content("~/uploads/" + fileName)" width="200" height="200" alt="Image not Available" class="img-fluid" />
        }
    </div>
</div>